# Distrack API Service Configuration
# Copy this file to .env and modify the values as needed

# API Configuration
API_BASE_URL=https://api.distrack.com
API_REQUIRE_KEY=true
API_RATE_LIMIT_ENABLED=true
API_LOGGING_ENABLED=true
API_CORS_ENABLED=true
API_MAX_REQUEST_SIZE=10485760
API_REQUEST_TIMEOUT=30s

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Database Configuration (if using external database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=distrack
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL_MODE=disable

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_FREE=60
RATE_LIMIT_BASIC=300
RATE_LIMIT_PRO=1000
RATE_LIMIT_ENTERPRISE=5000

# Daily Limits
DAILY_LIMIT_FREE=1000
DAILY_LIMIT_BASIC=50000
DAILY_LIMIT_PRO=200000
DAILY_LIMIT_ENTERPRISE=1000000

# Subscription Plan Limits
MAX_URLS_FREE=10
MAX_URLS_BASIC=100
MAX_URLS_PRO=1000
MAX_URLS_ENTERPRISE=10000

MAX_ALERTS_FREE=5
MAX_ALERTS_BASIC=50
MAX_ALERTS_PRO=500
MAX_ALERTS_ENTERPRISE=5000

# Security Configuration
JWT_SECRET=your_jwt_secret_here
API_KEY_LENGTH=32
SESSION_TIMEOUT=24h

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
STATUS_UPDATE_INTERVAL=5m

# Webhook Configuration (for future use)
WEBHOOK_ENABLED=false
WEBHOOK_TIMEOUT=10s
WEBHOOK_MAX_RETRIES=3

# OCR Service Configuration
OCR_SERVICE_URL=http://localhost:8000
OCR_SERVICE_TIMEOUT=30s

# Price Scraping Configuration
SCRAPER_TIMEOUT=60s
SCRAPER_MAX_RETRIES=3
SCRAPER_DELAY_BETWEEN_REQUESTS=1s

